@{
    ViewData["Title"] = "Home Page";
}
@model Api
<div class="text-center">
    <div class="form-group">
        <h1 class="display-4">Get Locations From API</h1>
        <form method="get" asp-action="Index" asp-controller="Data">
            <label asp-for="City" for="formGroupExampleInput"><input asp-for="City" required  class="form-control" placeholder="City Name" /></label>
            <button type="submit" class="btn btn-lg btn-primary">Search</button>
            <div><span asp-validation-for="City"></span></div>
        </form>
    </div>
    <div class="form-group">
        <h1 class="display-4">Get Photos From API</h1>
        <form method="get" asp-action="Index" asp-controller="Image">
            <label asp-for="City" for="formGroupExampleInput"><input asp-for="City" required  class="form-control" placeholder="City Name" /></label>
            <button type="submit" class="btn btn-lg btn-primary">Search</button>
            <div><span asp-validation-for="City"></span></div>
        </form>
    </div>
</div>
